<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_bookingsCardviewUpcoming"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/CV_bookingsUpcoming"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:elevation="4dp"
        app:cardBackgroundColor="#F6B265"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_bookingsUpcoming"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/IV_Sender"
                android:layout_width="114dp"
                android:layout_height="69dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toTopOf="@+id/BTN_Reschedule"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.363"
                app:layout_constraintStart_toEndOf="@+id/TV_AddressUpcomingBooking"
                app:srcCompat="@drawable/profile_circle_icon" />

            <ImageView
                android:id="@+id/IV_Mail"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.213"
                app:srcCompat="@drawable/spanner" />

            <TextView
                android:id="@+id/TV_Date"
                android:layout_width="85dp"
                android:layout_height="70dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="22 December 2025"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/TV_AddressUpcomingBooking"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/IV_Mail"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/TV_Time"
                android:layout_width="85dp"
                android:layout_height="33dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="13:00"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/TV_AddressUpcomingBooking"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TV_Date" />

            <TextView
                android:id="@+id/TV_Sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="171dp"
                android:text="Martha Salmah"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/TV_AddressUpcomingBooking"
                android:layout_width="144dp"
                android:layout_height="159dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="Jalan Universiti, Kuala Lumpur"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/IV_Mail"
                app:layout_constraintTop_toBottomOf="@id/TV_Sender" />

            <Button
                android:id="@+id/BTN_Reschedule"
                android:layout_width="121dp"
                android:layout_height="53dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="7dp"
                android:backgroundTint="@color/white"
                android:text="Reschedule"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>