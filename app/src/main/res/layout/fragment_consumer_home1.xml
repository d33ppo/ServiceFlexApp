<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".consumer.ConsumerHomeFragment1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Static Content -->
        <TextView
            android:id="@+id/TV_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Home"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Scrollable Area -->

        <Button
            android:id="@+id/IB_Category"
            android:layout_width="117dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:text="Category"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.029" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/TV_Home"
            app:layout_constraintVertical_bias="1.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <!-- Category Plumber -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Card_Plumber"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/orange_square"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/TV_Plumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plumber"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/IV_Plumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/plumber_category_pic" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Category Electrician -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Card_Electrician"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/orange_square"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/TV_Electrician"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Electrician"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/IV_Electrician"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/electrician_category" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Category Barber -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Card_Barber"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/orange_square"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/TV_Barber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Barber"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/IV_Barber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/barber_category" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Category Maid -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Card_Maid"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/orange_square"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/TV_Maid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maid"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/IV_Maid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/maid_category" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
