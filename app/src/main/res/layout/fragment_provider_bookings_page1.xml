<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".provider.ProviderBookingsPage1Fragment">

    <ScrollView
        android:layout_width="355dp"
        android:layout_height="534dp"
        android:layout_margin="1dp"
        android:background="#F8F8F8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="8dp"
                android:elevation="4dp"
                app:cardBackgroundColor="#F6AE65">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/IV_SenderUpcoming1"
                        android:layout_width="84dp"
                        android:layout_height="65dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="12dp"
                        app:layout_constraintBottom_toTopOf="@+id/BTN_Reschedule1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/TV_AddressUpcoming1"
                        app:srcCompat="@drawable/profile_circle_icon" />

                    <ImageView
                        android:id="@+id/IV_MailUpcoming1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.213"
                        app:srcCompat="@drawable/spanner" />

                    <TextView
                        android:id="@+id/TV_DateUpcoming1"
                        android:layout_width="84dp"
                        android:layout_height="39dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="22 December 2025"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/TV_AddressUpcoming1"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/IV_MailUpcoming1"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/TV_SenderUpcoming1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="171dp"
                        android:text="Martha Salmah"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/TV_AddressUpcoming1"
                        android:layout_width="151dp"
                        android:layout_height="62dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:text="Jalan Universiti, Kuala Lumpur"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        app:layout_constraintStart_toEndOf="@+id/IV_MailUpcoming1"
                        app:layout_constraintTop_toBottomOf="@id/TV_SenderUpcoming1" />

                    <Button
                        android:id="@+id/BTN_Reschedule1"
                        android:layout_width="84dp"
                        android:layout_height="31dp"
                        android:layout_marginEnd="7dp"
                        android:layout_marginBottom="7dp"
                        android:backgroundTint="@color/white"
                        android:text="Reschedule"
                        android:textSize="7sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <!-- Duplicate cards as needed -->

            <!-- Card 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="8dp"
                android:elevation="4dp"
                app:cardBackgroundColor="#92F6B265">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- ImageView: Left-Centered -->
                    <ImageView
                        android:id="@+id/IV_SenderUpcoming2"
                        android:layout_width="84dp"
                        android:layout_height="65dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="12dp"
                        app:layout_constraintBottom_toTopOf="@+id/BTN_Reschedule2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/TV_AddressUpcoming2"
                        app:srcCompat="@drawable/profile_circle_icon" />

                    <ImageView
                        android:id="@+id/IV_MailUpcoming2"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.213"
                        app:srcCompat="@drawable/spanner" />

                    <TextView
                        android:id="@+id/TV_DateUpcoming2"
                        android:layout_width="84dp"
                        android:layout_height="39dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="22 December 2025"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/TV_AddressUpcoming2"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/IV_MailUpcoming2"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/TV_SenderUpcoming2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="171dp"
                        android:text="Martha Salmah"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/TV_AddressUpcoming2"
                        android:layout_width="151dp"
                        android:layout_height="62dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:text="Jalan Universiti, Kuala Lumpur"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        app:layout_constraintStart_toEndOf="@+id/IV_MailUpcoming2"
                        app:layout_constraintTop_toBottomOf="@id/TV_SenderUpcoming2" />

                    <Button
                        android:id="@+id/BTN_Reschedule2"
                        android:layout_width="84dp"
                        android:layout_height="31dp"
                        android:layout_marginEnd="7dp"
                        android:layout_marginBottom="7dp"
                        android:backgroundTint="@color/white"
                        android:text="Reschedule"
                        android:textSize="7sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/BTN_Previous4"
        android:layout_width="58dp"
        android:layout_height="43dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:background="#F8F8F8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?android:attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/TV_Bookings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Bookings"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="356dp"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/orange_square"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_Bookings">

        <Button
            android:id="@+id/BTN_Upcoming"
            android:layout_width="104dp"
            android:layout_height="36dp"
            android:layout_marginStart="31dp"
            android:background="@drawable/orange_square"
            android:text="Upcoming"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/BTN_Completed"
            android:layout_width="104dp"
            android:layout_height="36dp"
            android:layout_marginEnd="31dp"
            android:background="@drawable/orange_square"
            android:text="Completed"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>